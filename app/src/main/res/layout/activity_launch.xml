<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LaunchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@id/launch_reg_btn"
        android:layout_marginBottom="96dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginRight="48dp"
            android:layout_marginLeft="48dp"
            android:id="@+id/idlc_img"
            android:src="@drawable/idlc"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="64dp"
            android:textSize="18sp"
            android:text="Belajar, Diskusi, dan Konsultasi hukum"
            android:textAlignment="center"
            android:layout_below="@id/idlc_img"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/create_account"
        android:textSize="18sp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:textColor="@color/text_white"
        android:background="@color/colorSecondBtn"
        android:layout_above="@id/launch_log_btn"
        android:id="@+id/launch_reg_btn"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/masuk"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:textColor="@color/text_white"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:id="@+id/launch_log_btn"/>

</RelativeLayout>